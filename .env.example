# Copia este archivo a .env y rellena valores reales.
# Nunca subas .env a git.

# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=aura_db

# Auth / JWT
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Ollama (opcional en local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI (opcional; si usas Ollama puedes omitirla)
OPENAI_API_KEY=
OPENAI_MODEL_PRIMARY=gpt-4o-mini
OPENAI_MODEL_FALLBACK=gpt-4o-mini

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=

# SMTP (opcional; para verificación por correo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=AURA
SMTP_USE_TLS=true

EMAIL_CODE_EXPIRE_MINUTES=10
EMAIL_VERIFY_LINK_BASE=http://localhost:8000/api/auth/verify-email?token=

# Meta
PYTHON_VERSION=3.11.9

# Cloudflare R2 (opcional, para documentos estáticos)
# Proveedor de storage (usa "r2")
STORAGE_PROVIDER=r2
# Bucket y endpoint S3
R2_BUCKET=aura-storage
R2_ENDPOINT=https://<account>.r2.cloudflarestorage.com
R2_REGION=auto
# Credenciales (API Token con permisos al bucket)
R2_ACCESS_KEY=
R2_SECRET_KEY=
# Base pública (si usas R2.dev o dominio propio). Si se omite, se usará R2_ENDPOINT/R2_BUCKET
# R2_PUBLIC_BASE_URL=https://pub-xxxxxx.r2.dev/aura-storage
